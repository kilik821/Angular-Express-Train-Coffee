!!! 5
html(ng-app='myApp')
head
  title Angular Express Train
  != css('app')
  body
    .container
      .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          a.brand(ng-href='/') Angular Express Train
          ul.nav.pull-right
            li(ng-hide='user.username')
              a(ng-href='/login') Login/Register
            li.dropdown(ng-show='user.username')
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Hello, {{user.username}}
                b.caret
              ul.dropdown-menu
                li
                  a(ng-click='logout()') Log Out
    .container(ng-view='ng-view')
  != js('lib/jquery')
  != js('lib/bootstrap')
  != js('app')
