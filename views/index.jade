html(ng-app='myApp')
head
  title Angular Express Train
  link(rel='stylesheet', href='/css/style.css')
  link(rel='stylesheet', href='/css/bootstrap.min.css')
  body
    .container
      .navbar.navbar-inverse
        .navbar-inner
          a.brand(ng-href='/') Angular Express Train
          ul.nav
            li
              a(ng-href='/todos', ng-show='user.username') My Todos
          ul.nav.pull-right
            li(ng-hide='user.username')
              a(ng-href='/login') Login/Register
            li.dropdown(ng-show='user.username')
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | Hello, {{user.username}}
                b.caret
              ul.dropdown-menu
                li
                  a(ng-click='logout()') Log Out
    .container(ng-view='ng-view')
  script(src='/js/lib/jquery/jquery.js')
  script(src='/js/lib/bootstrap/bootstrap.js')
  script(src='/js/lib/angular/angular.js')
  script(src='/js/lib/angular/angular-resource.js')
  script(src='/js/app.js')
  script(src='/js/services.js')
  script(src='/js/controllers.js')
  script(src='/js/filters.js')
  script(src='/js/directives.js')
